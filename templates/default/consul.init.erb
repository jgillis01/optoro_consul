#!/bin/sh -e

### BEGIN INIT INFO
# Provides:          blinq-sidekiq
# Required-Start:    $local_fs $remote_fs $network
# Required-Stop:     $local_fs $remote_fs $network
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: init script for blinq sidekiq workers
# Description:       manages the blinq sidekiq workers
### END INIT INFO

# make sure your pidfile here matches your monitrc
run_as_user=<%= @consul_user %>
sleep_time_during_restart=5
stop_schedule="QUIT/30/INT/10/KILL/5"
stdout_log="<%= @stdout_log %>"
command=/usr/local/bin/consul
pidfile=/var/run/consul_agent.pid
config_dir="<%= @config_dir %>"
data_dir="<%= @data_dir %>"

do_start () {
  start-stop-daemon --start --oknodo \
    --pidfile ${pidfile} --make-pidfile \
    --chuid ${run_as_user} --start \
    --background --exec \
    ${command} -- agent -config-dir ${config_dir} \
    - data-dir ${data_dir}
}
do_stop () {
  start-stop-daemon --stop --pidfile ${pidfile} --retry=${stop_schedule} --oknodo
}

case "$1" in
  start)
    do_start
    ;;
  stop)
    do_stop
    ;;
  restart)
    do_stop
    sleep ${sleep_time_during_restart}
    do_start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac

